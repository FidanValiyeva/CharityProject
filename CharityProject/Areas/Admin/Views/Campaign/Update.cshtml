@using CharityProject.ViewModels.Campaign 
@using CharityProject.Enums
@model CampaignUpdateVM
@{
    ViewData["Title"] = "Update Campaign";
}

<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between">
        <h6 class="m-0 font-weight-bold text-primary">Update Campaign</h6>
        <a asp-action="Index" asp-controller="Campaign" class="btn btn-outline-primary">Return List</a>
    </div>
    <div class="card-body">
        <form method="post" >
           <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ImageUrl"></label>

                @if (!string.IsNullOrEmpty(Model?.ImageUrl))
                {
                    <img asp-append-version="true" style="width:160px" src="@Model.ImageUrl" alt="Campaign Image" />
                }
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="TargetAmount"></label>
                <input asp-for="TargetAmount" class="form-control" />
                <span asp-validation-for="TargetAmount" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="EndDate"></label>
                <input asp-for="EndDate" type="date" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Status"></label>
                <select asp-for="Status" class="form-control" asp-items="Html.GetEnumSelectList<CampaignStatus>()"></select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>
