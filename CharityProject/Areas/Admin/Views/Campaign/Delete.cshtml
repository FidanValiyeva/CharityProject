@using CharityProject.ViewModels.Campaign
@model CampaignDeleteVM

@{
    ViewData["Title"] = "Delete Campaign";
}

<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex align-items-center justify-content-between">
        <h6 class="m-0 font-weight-bold text-danger">Delete Campaign</h6>
        <a asp-action="Index" asp-controller="Campaign" class="btn btn-outline-secondary">Return to List</a>
    </div>

    <div class="card-body">
        <h5>Are you sure you want to delete this campaign?</h5> 
        
        <form asp-action="Delete" asp-controller="Campaign"  method="post">
            <input asp-for="Id" /> 
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" asp-controller="Campaign" asp-area="Admin" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>



